<% page_title t '.system_users' %>

<% custom_javascripts '/javascripts/unobtrusive/user/common.js' %>

  <!-- working directory -->
  <div class="ui-widget-content ui-corner-all noborder">
    <div class="container_16 clearfix">
      <div class="grid_16 m-top-30 m-bottom-30">
        <h2 class="inline left"><%= t '.users' %></h2>
        <%=
        ui_button_to(:icon => 'plus',
                     :url => { :controller => 'users',
                               :action => 'new'
                              },
                     :label => t('.add_user'),
                     :class => 'left')
        %>
      </div>
    </div>
    <div class="container_16 clearfix">
      <div class="sort_box">
        <div class="grid_4"><strong><%= t '.login_name' %></strong></div>
        <div class="grid_10"><strong><%= t '.accessible_pallet' %></strong></div>
        <div class="grid_2"></div>
      </div>
    </div>
    <% for user in @users %>
      <div class=" container_16 row_box">
        <div class="grid_4"><%=h user.login %></div>
        <div class="grid_10 no_overflow_no_wrap" title="<%=h accessible_pallets(user).map{|p| p.name}.join(', ') %>">
          <%=h accessible_pallets(user).map{|p| p.name}.join(', ') %>
        </div>
        <div class="grid_2 right">
          <%=
          ui_button_to(:icon => 'trash',
                       :url => { :action => 'delete',
                                 :id => user.id,
                                },
                       :confirm => t('.confirm_destroy', :name => user.login),
                       :class => 'right')
          %>
          <%=
          ui_button_to(:icon => 'pencil',
                       :url => { :action => 'edit',
                                 :id => user.id,
                                },
                      :class => 'right')

          %>
        </div>
      </div>
   <% end %>
  </div>
  <!-- working directory -->

